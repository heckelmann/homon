// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Host {
  id        Int      @id @default(autoincrement())
  label     String
  hostname  String
  port      Int      @default(22)
  username  String?
  password  String?
  privateKey String?
  credentialId Int?
  credential Credential? @relation(fields: [credentialId], references: [id])
  refreshInterval Int @default(60)
  retentionDays Int @default(30)
  orderIndex Int @default(0)
  metrics   Metric[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Credential {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  username  String
  password  String?
  privateKey String?
  hosts     Host[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Metric {
  id          Int      @id @default(autoincrement())
  hostId      Int
  host        Host     @relation(fields: [hostId], references: [id], onDelete: Cascade)
  cpuUsage    Float
  memoryUsed  Int
  memoryTotal Int
  diskPercent Float
  diskUsage   String   @default("[]") // JSON string of DiskInfo[]
  createdAt   DateTime @default(now())

  @@index([hostId, createdAt])
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model OAuthConfig {
  id           Int      @id @default(autoincrement())
  enabled      Boolean  @default(false)
  name         String   @default("OpenID Connect")
  issuer       String
  clientId     String
  clientSecret String
  scope        String   @default("openid profile email")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model OtlpConfig {
  id        Int      @id @default(autoincrement())
  enabled   Boolean  @default(false)
  endpoint  String
  headers   String?  // JSON string for custom headers
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
